{
  "name": "cypress-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./cypress/e2e/",
    "prepare": "husky",
    "cy:allure:run": "cypress run --spec './cypress/e2e/...' --env allure=true",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:combine": "node ./node_modules/allure-single-html-file-js/combine.js allure-report"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@shelex/cypress-allure-plugin": "^2.40.1",
    "allure-commandline": "^2.25.0",
    "allure-single-html-file-js": "^0.0.6",
    "cypress-file-upload": "^5.0.8",
    "esbuild": "^0.17.19",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-cucumber": "^2.0.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.26.0"
  },
  "devDependencies": {
    "cypress": "12.14.0",
    "eslint": "^8.42.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": [
      "cypress/e2e/nrg_task/step_definitions/*.js"
    ],
    "json": {
      "enabled": true,
      "output": "cypress/reports/json/cucumber-report.json"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/messages/cucumber-messages.ndjson"
    }
  }
}
